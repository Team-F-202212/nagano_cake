<div class="container">
    <div class="row">
        <div class="col-md-12 mb-5">
            <h4 class="p-3 mb-2 bg-secondary text-white"><%= @customer.first_name + @customer.last_name + "さんの会員情報編集" %></h4>
            <%= form_with model: [:admin, @customer] do |f| %>
            <table class="table table-borderless form-row mx-auto">
                <tr>
                    <td>会員ID</td>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <td>氏名</td>
                    <td><%= f.text_field :first_name %></td>
                    <td><%= f.text_field :last_name %></td>
                </tr>
                <tr>
                    <td>フリガナ</td>
                    <td><%= f.text_field :first_name_kana %></td>
                    <td><%= f.text_field :last_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= f.text_field :postal_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= f.text_field :address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= f.text_field :telephone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= f.text_field :email %></td>
                </tr>
                <tr>
                    <td>会員ステータス</td>
                    <td>
                        <%= f.radio_button :is_deleted, :in_use %><%= f.label :is_deleted_in_use, '有効' %>
                        <%= f.radio_button :is_deleted, :withdrawal %><%= f.label :is_deleted_withdrawal, '退会' %>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><%= f.submit "変更を保存" ,class: 'btn btn-success' %></td>
                </tr>
            </table>
            <% end %>
        </div>
    </div>
</div>