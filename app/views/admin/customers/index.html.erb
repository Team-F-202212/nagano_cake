<h2>会員一覧</h2>
<table>
    <tr>
        <th>会員ID</th>
        <th><%= link_to "氏名", admin_customers_path %></th>
        <th>メールアドレス</th>
        <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer.id) do %>
        <%= customer.first_name + customer.last_name %>
        <% end %></td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted_i18n %></td>
    </tr>
    <% end %>
</table>

<%= paginate @customers %>