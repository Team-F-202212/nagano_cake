<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="p-3 mb-2 bg-secondary text-white">会員一覧</h4>
            <table class="table table-striped text-center">
                <tr>
                    <th>会員ID</th>
                    <th><%= link_to "氏名", admin_customers_path %></th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
                <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.id %></td>
                    <td>
                        <%= link_to admin_customer_path(customer.id) do %>
                        <%= customer.last_name + customer.first_name %>
                        <% end %>
                    </td>
                    <td><%= customer.email %></td>
                    <td><%= customer.is_deleted_i18n %></td>
                </tr>
                <% end %>
            </table>
        <%= paginate @customers %>
        </div>
    </div>
</div>
