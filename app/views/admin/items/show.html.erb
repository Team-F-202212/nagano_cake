<div class ="container">
  <div class="row text-center mb-5">
    <div class="col-sm-3">
      <h4 class="title bg-light" >商品詳細</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 text-center">
      <p><%= image_tag @item.image, size: "250x200" %></p>
   </div>
   
   <div class="col-md-7">
     <table class="table table-borderless">
       <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= number_with_delimiter(@item.with_tax_price) %>
              (<%= number_with_delimiter(@item.price) %>)円
          </td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><% unless @item.is_active == true %>
                <p class="status text-muted"><%= p "販売停止中" %></p>
                <% else %>
                <p class="status text-success"><%= p "販売中" %></p>
                <% end %></td>
        </tr>
       </tbody>
     </table>
   </div>
  </div>
  <div class="form-group text-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
</div>
