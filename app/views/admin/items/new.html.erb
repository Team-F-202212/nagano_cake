<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

  <div class="form-group">
    <%= f.label "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label "商品名" %>
    <%= f.text_field :name, class: 'form-control ', autofocus: true, placeholder: "商品名" %>
  </div>

  <div class="form-group">
    <%= f.label "商品説明" %>
    <%= f.text_area :introduction, class: 'form-control ', placeholder: "ここに説明文を記述します" %>
  </div>
  
  <div class="form-group">
    <%= f.label "ジャンル" %>
    <%= f.collection_select :genre_id, @genres, :id, :name, :prompt => "--選択してください--" %>
  </div>


  <div class="form-group">
    <%= f.label "税抜き価格" %>
    <%= f.text_field :price, class: 'form-control item_price', placeholder: "1000" %>円
  </div>
  
  <div>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "販売中" %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "販売停止中" %>
 </div>

  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>