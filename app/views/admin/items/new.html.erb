<div class ="container">
  <div class="mb-5 row text-center">
    <div class="col-md-3">
      <h4 class="title bg-light" >商品新規登録</h4>
    </div>
  </div>
  
  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "商品画像" %>
      </div>
      <div class="col-md-5">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
   
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "商品名" %>
      </div>
      <div class="col-md-5">
        <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: "商品名" %>
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "商品説明" %>
      </div>
      <div class="col-md-5">
        <%= f.text_area :introduction, class: 'form-control', placeholder: "ここに説明文を記述します" %>
      </div>
    </div>
    
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "ジャンル" %>
      </div>
      <div class="col-md-5">
       <%= f.collection_select :genre_id, @genres, :id, :name, :prompt => "--選択してください--" %>
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "税抜価格" %>
      </div>
      <div class="col-md-5 d-flex">
        <%= f.text_field :price, class: 'form-control', placeholder: "1000"%><span>円</span>
      </div>
    </div>
    
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "販売ステータス" %>
      </div>
      <div class="col-md-5 text-center">   
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
    </div>
    
    <div class="mb-3 row justify-content-center">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
