<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

  <div class="form-group">
    <%= f.label "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label "商品名" %>
    <%= f.text_field :name, class: 'form-control item_name' %>
  </div>

  <div class="form-group">
    <%= f.label "商品説明" %>
    <%= f.text_area :introduction, class: 'form-control item_introduction' %>
  </div>
  
  <div class="form-group">
    <%= f.label "ジャンル" %>
    <%= f.collection_select :genre_id, @genres, :id, :name, :prompt => "--選択してください--" %>
  </div>


  <div class="form-group">
    <%= f.label "税抜き価格" %>
    <%= f.text_field :price, class: 'form-control item_price' %>円
  </div>

  ステータス

  <div class="form-group">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
<% end %>