<div class ="container">
  <div class="mb-5 row text-center">
    <div class="col-md-3">
      <h4 class="title bg-light" >商品編集</h4>
    </div>
  </div>

  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "商品画像" %>
      </div>
      <div class="col-md-5">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "商品名" %>
      </div>
      <div class="col-md-5">
        <%= f.text_field :name, class: 'form-control item_name' %>
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "商品説明" %>
      </div>
      <div class="col-md-5">
        <%= f.text_area :introduction, class: 'form-control item_introduction' %>
      </div>
    </div>
  
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "ジャンル" %>
      </div>
      <div class="col-md-5">
        <%= f.collection_select :genre_id, @genres, :id, :name, :prompt => "--選択してください--" %>
      </div>
    </div>
    
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "税抜き価格" %>
      </div>
      <div class="col-md-5 d-flex">
        <%= f.text_field :price, class: 'form-control item_price' %>円
      </div>
    </div>
    
    <div class="mb-3 row justify-content-center">
      <div class="col-md-2">
        <%= f.label "販売ステータス" %>
      </div>
      <div class="col-md-5 text-center"> 
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>