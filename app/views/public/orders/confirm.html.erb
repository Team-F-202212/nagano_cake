<h4>注文情報確認</h4>
<%= @sum = 0 %>
<table class ="order_table_info">
    <thead>
      <tr>
        <th colspan-3>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
     <%= @sum = 0 %>
     <% @cart_items.each do |item| %>
      <tr>
        <td><%= item.item.name %></td>
        <td><%= item.item.with_tax_price %></td> 
        <!--<td> item.item.amount </td>-->
        
        <td><%= item.amount %></td>
        <td><%= item.subtotal %></td>

        <%= @sum += item.subtotal %>
        </td> 
      </tr>  
      <% end %>
    </tbody>
  </table>
  
  <table class ="postage">
    <thead>
      <tr>
        <th>送料</th>
        <th>商品合計</th>
        <th>請求金額</th>
      </tr>
    </thead>
    
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |item| %>
      <tr>
        <td>800</td>
        <td><% @sum += item.subtotal %></td>
        <p><%= @sum %></p>
        <td><%= @sum + 800 %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <table class ="">
    <thead>
      <tr>
        <th>支払方法</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @confirm_order.payment_method_i18n %></td>
      </tr>
    </tbody>
  </table>
  

  <table class ="">
    <thead>
      <tr>
        <th>お届け先</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= @confirm_order.address %>
          <%= @confirm_order.postal_code %>
          <%= @confirm_order.name %>
        </td>
      </tr>
    </tbody>
  </table>


 

