<div class = "container">
 <h5 class="font-weight-bold"><span class="p-3 mb-2 bg-light text-dark">注文履歴詳細</span></h5>
</div>
<br>
<div class = "row">
<div class="col-md-7 offset-md-1">
  <table class="table table-bordered">
    <thead>
      <div class="font-weight-bold">注文情報</div>
    </thead>
    <tbody>
      <tr>
        <td bgcolor= "#F2F2F2", scope="col" style="width: 30%">注文日</td>
        <td scope="col" style="width: 70%"><%= @order.updated_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td  bgcolor= "#F2F2F2">配送先</td>
        <td>
          <%= @order.address %><br>
          <%= @order.postal_code %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td  bgcolor= "#F2F2F2">支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td  bgcolor= "#F2F2F2">ステータス</td>
        <td><%= @order.status %></td>
      </tr>
    </tbody>
  </table>
  </div>
  <div class="col-md-3">
  <table class="table table-bordered">
    <thead>
      <div class="font-weight-bold">請求情報</div>
    </thead>
    <tbody>
      <tr>
        <td  bgcolor= "#F2F2F2">商品合計</td>
        <td><%= @order.total_payment %></td>
      </tr>
      <tr>
        <td  bgcolor= "#F2F2F2">配送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td class="font-weight-bold" bgcolor= "#F2F2F2">ご請求額</td>
        <td><%= @order.sum_of_order_price %></td>
      </tr>
   </tbody>
</table>
</div>
</div>
</div>
<br>
<div class="col-md-7 offset-md-1">
<table class="table table-bordered">
    <thead>
      <div class="font-weight-bold">注文内容</div>
    </thead>
    <tbody>
      <tr bgcolor= "F2F2F2">
        <td>商品</td>
        <td>単価（税込）</td>
        <td>個数</td>
        <td>小計</td>
      </tr>
      <tr>
      <% @order_items.each do |order_item| %>
        <td scope="col" style="width: 50%"><%= order_item.item.name %></td>
        <td scope="col" style="width: 30%"><%= order_item.price %></td>
        <td scope="col" style="width: 10%"><%= order_item.amount %></td>
        <td scope="col" style="width: 10%"><%= order_item.sum_of_order_price %></td>
      <% end %>
      </tr>
    </tbody>
</table>
</div>


