
<!--ジャンル検索を部分テンプレート化する-->
<div class="left container">
          <div class="col-md-3">
              <h4>ジャンル検索</h4>
              <table class="table">
                  <tbody>

                      <tr>
                          <td><%= link_to "ケーキ", "/" %></td>
                      </tr>
                      <tr>
                          <td><%= link_to "焼き菓子", "/" %></td>
                      </tr>
                      <tr>
                          <td><%= link_to "プリン", "/" %></td>
                      </tr>
                      <tr>
                          <td><%= link_to "キャンディ", "/" %></td>
                      </tr>
                  </tbody>
              </table>
          </div>

     <div class="container">     
      <div class ="row text-center"> 
       
          <div class ="row">
              <div class= "text-center">
                  <P>画像</P>
              </div>
          
          

          <div class ="item_introduction">
            <div class ="item_name">
              <h2><%= @item.name %></h2>
              <h4><%= @item.introduction %></h4>
            </div>
      　　</div>

            <div class ="money">
              <%= number_with_delimiter(@item.price) %>
            </div>
            
            <%= @cart_item.item_id %>
            <%= form_with model: @cart_item do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.submit "カートに入れる", class: 'btn btn-success' %>
            <% end %>

       </div>
      </div> 
      
      
   
　　</div>　　
</div>

