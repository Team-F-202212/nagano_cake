

<main>
  <h2>ショッピングカート</h2>
  <div class ="enpty">
    <%= link_to "カートを空にする", destroy_all_path, method: :delete, class:"btn btn-sm btn-danger" %>
  </div>
  <table class ="order_table">
    <thead>
      <tr>
        <th colspan-3>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
     <%= @cart_items.each do |item| %>
      <tr>
        <td><%= item.item.name %></td>
        <td></td>
        <td>
          <%= form_with model: item do |f| %>
            <%= f.select :amount, *[1..10] %>
          <%= f.submit "更新", class: 'ml-2 btn btn-success' %>
          <% end %>
          
        </td>
        <td><%= item.item.price %></td>
        <td>
        <%= link_to "削除する", cart_item_path(item.id), method: :delete, class:"btn btn-sm btn-danger" %>
        </td>
      </tr>  
      <% end %>
    </tbody>
  </table>
  <div>
    <%= link_to "情報入力画面に進む", new_order_path, class:"btn btn-sm btn-success" %>
  </div>
  

</main>
