<div class = "test-secondary">
 <h2 class="font-weight-bold">配送先登録/一覧</h2>
</div>
<table>
<thead>
<%= form_with model: @address do |f| %>
<tr>
  <td>郵便番号（ハイフンなし）</td>
  <td>
    <div class="form-group">
     <%= f.text_field :postal_code, id:"postal_code", class: 'form-control' %>
    </div>
  </td>
</tr>
<tr>
  <td>住所</td>
  <td>
    <div class="form-group">
     <%= f.text_field :address, id:"address", class: 'form-control' %>
    </div>
  </td>
</tr>
<tr>
  <td>宛名</td>
  <td>
    <div class="form-group">
     <%= f.text_field :name, id:"name", class: 'form-control' %>
    </div>
</tr>
  </td>
<tr>
  <td></td>
  <td>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </td>
</tr>
<% end %>
</thead>
</table>
<div class="col-md-5">
<table class="table table-bordered">
<tbody>

  <tr bgcolor= "#F2F2F2">
    <td>郵便番号</td>
    <td>住所</td>
    <td>宛名</td>
    <td></td>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td>

      <%= link_to "編集する", edit_address_path(address.id), class: "btn  btn-success"  %>

      <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn  btn-danger" %>

    </td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
