<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

 <%= render "public/shared/error_messages", resource: resource %>

  

 <div class="field">

 <%= f.label :first_name %><br>

 <%= f.text_field :first_name %>

</div>



<div class="field">

 <%= f.label :last_name %><br>

 <%= f.text_field :last_name %>

</div>



<div class="field">

 <%= f.label :first_name_kana %><br>

 <%= f.text_field :first_name_kana %>

</div>



<div class="field">

 <%= f.label :last_name_kana %><br>

 <%= f.text_field :last_name_kana %>

</div>



<div class="field">

 <%= f.label :postal_code %><br>

 <%= f.text_field :postal_code %>

</div>



<div class="field">

 <%= f.label :address %><br>

 <%= f.text_field :address %>

</div>



<div class="field">

 <%= f.label :telephone_number %><br>

 <%= f.text_field :telephone_number %>

</div>



 <div class="field">

  <%= f.label :email %><br />

  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

 </div>



 <div class="field">

  <%= f.label :password %>

  <% if @minimum_password_length %>

  <em>(<%= @minimum_password_length %> characters minimum)</em>

  <% end %><br />

  <%= f.password_field :password, autocomplete: "new-password" %>

 </div>



 <div class="field">

  <%= f.label :password_confirmation %><br />

  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

 </div>



 <div class="actions">

  <%= f.submit "Sign up" %>

 </div>

<% end %>



<%= render "public/shared/links" %>

  <%= render "public/shared/error_messages", resource: resource %>

<div class="container">
  <div class="field">
    <%= f.label :name, "名前" %>
    <%= f.label :last_name, "（性）" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
    <%= f.label :first_name "（名）" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :last_name_kana, "フリガナ" %>
    <%= f.label :last_name_kana, "（セイ）" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
    <%= f.label :first_name_kana, "（メイ）" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  <br />
 
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  <br />

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <br />

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
  </div>
</div>  
<% end %>

