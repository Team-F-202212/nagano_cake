
 <h2 class="font-weight-bold">会員情報編集</h2>


<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<table>
<thead>
<tr>
  <td>氏名</td>
  <td>
     <div class="form-group">
     <%= f.text_field :first_name, id:"first_name", class: 'form-control' %>
     </div>
  </td>
  <td>
     <div class="form-group">
     <%= f.text_field :last_name, id:"last_name", class: 'form-control' %>
     </div>
  </td>
</tr>
<tr>
  <td>フリガナ</td>
  <td>
     <div class="form-group">
     <%= f.text_field :first_name_kana, id:"first_name_kana", class: 'form-control' %>
     </div>
  </td>
  <td>
     <div class="form-group">
     <%= f.text_field :last_name_kana, id:"last_name_kana", class: 'form-control' %>
     </div>
  </td>
</tr>
<tr>
  <td>郵便番号</td>
  <td>
     <div class="form-group">
     <%= f.text_field :postal_code, id:"postal_code", class: 'form-control' %>
     </div>
  </td>
</tr>
<tr>
  <td>住所</td>
  <td>
     <div class="form-group">
     <%= f.text_field :telephone_number, id:"telephone_number", class: 'form-control' %>
     </div>
  </td>
</tr>
<tr>
  <td>メールアドレス</td>
  <td>
     <div class="form-group">
     <%= f.text_field :email, id:"email", class: 'form-control' %>
     </div>
  </td>
</tr>
<tr>
  <td></td>
  <td>
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  </td>
  <td>
    <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger"  %>
  </td>
</tr>

</thead>
</table>
<% end %>