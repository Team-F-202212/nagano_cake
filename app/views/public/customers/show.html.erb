<div class = "test-secondary">
 <h2>マイページ</h2>
</div>
<div class="d-flex p-2 bd-highlight">
 <h2 class="font-weight-bold">登録情報</h2>
 <h2>
  <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success"  %>
</h2>
</div>
<table border="1">
    <tr>
      <td bgcolor= "#F2F2F2">氏名</td>
    　<td>
    　  <%= @customer.first_name %>
    　  <%= @customer.last_name %>
      </td>
    </tr>
    <tr>
      <td bgcolor= "#F2F2F2">カナ</td>
      <td>
       <%= @customer.first_name_kana %>
    　  <%= @customer.last_name_kana %>
      </td>
    </tr>
    <tr>
      <td bgcolor= "#F2F2F2">郵便番号</td>
      <td>
       <%= @customer.postal_code %>
      </td>
    </tr>
    <tr>
      <td bgcolor= "#F2F2F2">住所</td>
      <td>
       <%= @customer.address %>
      </td>
    </tr>
    <tr>
      <td bgcolor= "#F2F2F2">電話番号</td>
      <td>
       <%= @customer.telephone_number %>
      </td>
    </tr>
    <tr>
      <td bgcolor= "#F2F2F2">メールアドレス</td>
      <td>
       <%= @customer.email %>
      </td>
    </tr>
</table>
<div class="d-flex p-2 bd-highlight">
 <h2 class="font-weight-bold">配送先</h2>
 <h2>
  <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary"  %>
</h2>
</div>
<div class="d-flex p-2 bd-highlight">
 <h2 class="font-weight-bold">注文履歴</h2>
 <h2>
  <%= link_to "一覧を見る", orders_path, class: "btn btn-primary"  %>
</h2>
</div>